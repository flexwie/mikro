{
  "name": "@flexwie/mikro",
  "version": "0.1.0",
  "description": "True microservices framework for nodeJs ",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "build:proto": "./scripts/build.sh",
    "prebuild": "npm run build:proto",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "cli": "node cli",
    "generate-docs": "node_modules/.bin/jsdoc --configure .jsdoc.json -r --verbose"
  },
  "keywords": [
    "microservices",
    "framework",
    "cli",
    "distributed"
  ],
  "author": "Felix Wieland",
  "license": "ISC",
  "repository": {
    "directory": "mikro",
    "url": "https://github.com/flexwie/mikro"
  },
  "devDependencies": {
    "@types/ioredis": "^4.17.9",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "minami": "^1.2.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3",
    "@types/google-protobuf": "^3.7.4",
    "grpc-tools": "^1.10.0",
    "ts-protoc-gen": "^0.14.0"
  },
  "files": [
    "lib/**/*",
    "cli/**/*"
  ],
  "bin": {
    "mikro": "./cli/index.js"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "ioredis": "^4.19.4",
    "ip": "^1.1.5",
    "kafkajs": "^1.15.0",
    "unique-names-generator": "^4.3.1",
    "winston": "^3.3.3",
    "@grpc/grpc-js": "^1.2.2",
    "google-protobuf": "^3.14.0"
  }
}
